<form action="/placemarks/{{placemark._id}}/updatedetails" method="POST" enctype="multipart/form-data">
  <div class="box mt-5">
    <div class="pb-2 columns">
      <div class="column is-size-3">{{ placemark.name }}</div>
      <div class="columns is-pulled-right pr-4">
        <div class="column">
          <button class="button is-link fas fa-save"></button>
        </div>
        <a class="column" href="/placemarks/{{placemark._id}}/deletedetails">
          <i class="button fas fa-trash" ></i>
        </a>
      </div>
    </div>
    <div class="box box-link-hover-shadow">
      <div class="columns">
          <div class="column">Description: </div>
          <div class="column">{{placemark.description}}</div>
          <div class="field column">
            <input class="input" type="text" placeholder="Enter Description" name="description">
          </div>
      </div>
      <div class="columns">
          <div class="column">Location: </div>
          <div class="column">{{placemark.location}}</div>
          <div class="field column">
            <input class="input" type="text" placeholder="Enter Location" name="location">
          </div>
      </div>
      <div class="columns">
          <div class="column">Weather: </div>
          <div class="column">{{placemark.weather}}</div>
          <div class="field column">
            <input class="input" type="text" placeholder="Enter Weather" name="weather">
          </div>
      </div>
      <div class="columns">
          <div class="card">
          <div class="card-image">
            <figure class="image is-256x256">
              <img src={{placemark.image}}>
            </figure>
          </div>
          <div class="card-content">
                <div id="file-select" class="file has-name is-fullwidth">
                  <label class="file-label"> <input class="file-input" name="imagefile" type="file" name="resume" accept="image/png, image/jpeg">
                    <span class="file-cta">
                      <span class="file-icon">
                        <i class="fas fa-upload"></i>
                      </span>
                      <span class="file-label">
                        Choose a fileâ€¦
                      </span>
                    </span>
                    <span class="file-name"></span>
                  </label>
                </div>
            </div>
        </div>
      </div>
    </div> 
  </div>
</form>




<script>
  const fileInput = document.querySelector(".file-input");
  fileInput.onchange = () => {
    if (fileInput.files.length > 0) {
      const fileName = document.querySelector(".file-name");
      fileName.textContent = fileInput.files[0].name;
    }
  };
</script>